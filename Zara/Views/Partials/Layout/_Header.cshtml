@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    var home = Umbraco.AssignedContentItem.Root();
    var search = home.DescendantOfType("search");
    var cart = home.DescendantOfType("shoppingCart");
}

<div class="layout-header__left">
    <button class="layout-header__mobile-action layout-header__mobile-action--menu" aria-label="Mở menu">
        <svg width="32" height="32">
            <path fill-rule="evenodd" d="M4 9h25v.5H4V9zm0 7.2h25v.5H4v-.5zm.3 7.3H4v.5h25v-.5H4.3z" clip-rule="evenodd"></path>
        </svg>
    </button>
    <div class="layout-logo" itemtype="http://schema.org/Organization">
        <h1 itemscope="">
            <a class="layout-logo__link link" href="@home.Url(mode: UrlMode.Absolute)" title="BYCOTTON" itemprop="url">
                <span class="layout-logo__image">
                    @Html.Raw(home.Value("logo"))
                </span>
            </a>
        </h1>
    </div>
</div>
<div class="layout-header__center-right">
    <div class="layout-header__center">
        <div class="layout-header__nav">
            @if (search != null)
            {
                <div class="layout-header-search-bar" role="search">
                    <a href="@search.Url(mode: UrlMode.Absolute)" class="layout-header-search-bar__link">
                        <span aria-hidden="true" class="layout-header-search-bar__text">
                            <span>Tìm kiếm</span>
                        </span>
                        <span class="layout-header-search-bar__line"></span>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="layout-header__right">
        <div class="layout-header__icons">
            @if (search != null)
            {
                <div class="layout-header-icons__search">
                    <a aria-label="Tìm kiếm" href="@search.Url(mode: UrlMode.Absolute)" class="layout-header-icons__icon layout-header-icons__search-icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M4.65 9.906a6.006 6.006 0 1 1 10.034 4.457l3.961 4.754-.922.768-4.007-4.808a6.007 6.007 0 0 1-9.066-5.17zM10.656 5.1a4.807 4.807 0 1 0 0 9.613 4.807 4.807 0 0 0 0-9.613z"></path>
                        </svg>
                    </a>
                </div>
            }
            @if (cart != null)
            {
                <div class="layout-header-icons__cart">
                    <a href="@cart.Url(mode: UrlMode.Absolute)" class="layout-header-icons__icon layout-header-icons__cart-icon">
                        <svg viewBox="0 0 32 32">
                            <path d="M12 7V6c0-1 1-2 2-2h4c1 0 2 1 2 2v1h7v19H5V7h7zm14 1H6v17h20V8zM13 6v1h6V6c0-.5-.5-1-1-1h-4a1 1 0 0 0-1 1z"></path>
                        </svg>
                        <span class="layout-header-icons__cart-amount">@Html.Action("RenderCartNumber", "Cart")</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>