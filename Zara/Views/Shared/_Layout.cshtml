@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    @Html.Partial("~/Views/Partials/Layout/_Share.cshtml")
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    @Styles.Render("~/bundles/style")
    @Scripts.Render("~/bundles/topJS")
    @RenderSection("styles", required: false)
</head>
<body>
    <header class="layout-header">
        @Html.Partial("~/Views/Partials/Layout/_Header.cshtml")
        @RenderSection("UtilitiesHeader", required: false)
    </header>
    @Html.Partial("~/Views/Partials/Layout/_Aside.cshtml")
    @RenderBody()
    @RenderSection("Footer", required: false)
    <a href="#" class="scroll-to-top"></a>
    @Scripts.Render("~/bundles/botJS")
</body>
</html>